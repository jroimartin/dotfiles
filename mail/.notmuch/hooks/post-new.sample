#!/bin/sh

set -e

# Remove the "new" tag from replied, forwarded and draft messages.
notmuch tag -new -- tag:new and '(tag:replied or tag:passed or tag:draft)'

# Tag sent messages.
notmuch tag -new +sent -- tag:new and from:user@example.com

# Tag mailing list messages.
notmuch tag -new +ml -- tag:new and to:ml@example.com

# Tag remaining messages as inbox.
notmuch tag -new +inbox -- tag:new
